@model Models.ViewModel.AddProductViewModel

@{
    ViewData["Title"] = "Product";
    Layout = "_AdminLayout";
}

<div>
    <br />
    <h2 class="text-center">Add Product</h2>

    <div class="title text-center">
        <p>
            <form class="container" style="width:400px;text-align:center;" asp-controller="User" asp-action="Login" method="post">
                <div class="form-group mx-sm-3 mb-2">
                    <input asp-for="@Model.Product.Name" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <input asp-for="@Model.Product.Price" type="number" class="form-control" placeholder="Price">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <select class="form-control">
                        <option value="-1" selected>All</option>
                        @foreach (var item in Model.CategoryList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <button type="submit" class="btn btn-dark" asp-controller="Product" asp-action="AddProduct"> <i class="fa fa-save"></i> Save</button>
                </div>
            </form>
</p>
    </div>
    <div class="container-fluid justify-content-center">
        <br />
    </div>
</div>